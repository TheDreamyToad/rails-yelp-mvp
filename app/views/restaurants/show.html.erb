<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<%= link_to 'Back', restaurants_path class: "btn btn-primary" %>
<%= link_to "new review", new_restaurant_review_path(@restaurant) class: "btn btn-primary" %>
<ul>
  <% @restaurant.reviews.each do |r| %>
    <li><%= r.content %> <%= "*" * r.rating %></li>
  <% end %>

</ul>
